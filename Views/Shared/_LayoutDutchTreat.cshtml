<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat @ViewBag.Title</title>
    <link href="~/css/dutchtreat.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>Welcome to Dutch Treat</header>
    <menu>
        <ul>
            <li><a asp-controller="DutchTreat" asp-action="Index">Home</a></li>
            <li><a asp-controller="DutchTreat" asp-action="Contact">Contact</a></li>
            <li><a asp-controller="DutchTreat" asp-action="About">About</a></li>
        </ul>
    </menu>
    <section>
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <footer>Copyright 2017</footer>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index-DucthTreat.js"></script>
    @RenderSection("scripts", false)
</body>
</html>