<!DOCTYPE html>
<html>
    <head>
        <title>The World - @ViewBag.Title</title>
        <meta charset="utf-8"/>
        <link rel="stylesheet" href="~/css/site.css">
    </head>

    <body>
        <div id="sidebar">
            <img src="~/img/MU.jpg" alt="headshot" class="headshot">
            <span id="username">Hello</span>
            <ul class="menu">
                <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="About">About</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
            </ul>
        </div>
        <div id="wrapper">
            <div id="main">
                <button id="toggleSidebar">Toggle Sidebar</button>
                @RenderBody()
            </div> 
            <div id="footer">
                &copysr; Tin Nguyen - 2017
            </div>
        </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("scripts",false)
    <script type="text/javascript" src="~/js/site.js"></script>

    </body>
</html>